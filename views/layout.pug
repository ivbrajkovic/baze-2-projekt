	body.theme-gradient-light-3
		// The Modal
		#myModal(class="modal fade fade in", tabindex="-1", role="dialog", data-keyboard="false" data-backdrop="static")
			.modal-dialog.modal-lg.modal-dialog-centered(role="document")
				.modal-content.unos-form-wraper.rounded-0
					// Modal Header
					.modal-header
						h4.modal-title Custom SQL command
						button.close(type='button', data-dismiss='modal') Ã—
					// Modal body
					.modal-body
						label.form-switch
							input#checkConnect(type="checkbox")
							i
							|Socket connect
						div.tableContainer.mb-4
						
						//div.container-fluid
						input#inputCommand(type="text", name="commandSql", placeholder="select * from taproizvodble;", value="select * from proizvod;")
						button#btnSend.btn.btn-success.float-right.rounded-0.mt-1 Send

					// Modal footer
					.modal-footer
						button.btn.btn-danger.rounded-0(type='button', data-dismiss='modal') Close

